<!DOCTYPE html>
<html>
  <head>
    <title> Chitter </title>
  </head>

  <body>
    <% if current_user %>
      Welcome, <%= current_user.name %>
    <% end %>

    <% if flash[:errors] && !flash[:errors].empty? %>
      <ul id='error'>
        <% flash[:errors].each do |error| %>
          <li>  <%= error %> </li>
        <% end %>
      </ul>
    <% end %>

    <% if flash[:notice] %>
      <div id='notice'>
        <%= flash[:notice] %>
      </div>
    <% end %>

     <%= yield %>
  </body>
</html>
